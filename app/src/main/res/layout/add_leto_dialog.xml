<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/red_ball_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/blue_ball_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red_ball_recycler_view"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/add_btn_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blue_ball_recycler_view"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:alpha="0.2"
        android:background="@drawable/red_ball_bg_shape"
        android:text="确定" />
</RelativeLayout>